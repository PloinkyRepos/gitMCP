{
  "tools": [
    {
      "name": "git_info",
      "title": "Git Info",
      "description": "Return git repository info for a path (branch, upstream, remotes).",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        }
      },
      "env": {
        "TOOL_NAME": "git_info"
      }
    },
    {
      "name": "git_status",
      "title": "Git Status",
      "description": "Return git status for a repository path.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        }
      },
      "env": {
        "TOOL_NAME": "git_status"
      }
    },
    {
      "name": "git_diff",
      "title": "Git Diff",
      "description": "Return a unified diff for a file.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "file": {
          "type": "string",
          "optional": false
        },
        "cached": {
          "type": "boolean",
          "optional": true
        },
        "ref": {
          "type": "string",
          "optional": true
        }
      },
      "env": {
        "TOOL_NAME": "git_diff"
      }
    },
    {
      "name": "git_stage",
      "title": "Git Stage",
      "description": "Stage files in a repository.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "files": {
          "type": "array",
          "optional": true,
          "items": {
            "type": "string"
          }
        }
      },
      "env": {
        "TOOL_NAME": "git_stage"
      }
    },
    {
      "name": "git_unstage",
      "title": "Git Unstage",
      "description": "Unstage files in a repository.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "files": {
          "type": "array",
          "optional": true,
          "items": {
            "type": "string"
          }
        }
      },
      "env": {
        "TOOL_NAME": "git_unstage"
      }
    },
    {
      "name": "git_untrack",
      "title": "Git Untrack",
      "description": "Remove files from git index while keeping them on disk.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "files": {
          "type": "array",
          "optional": true,
          "items": {
            "type": "string"
          }
        }
      },
      "env": {
        "TOOL_NAME": "git_untrack"
      }
    },
    {
      "name": "git_check_ignore",
      "title": "Git Check Ignore",
      "description": "Return ignore rule matches for paths.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "files": {
          "type": "array",
          "optional": true,
          "items": {
            "type": "string"
          }
        }
      },
      "env": {
        "TOOL_NAME": "git_check_ignore"
      }
    },
    {
      "name": "git_restore",
      "title": "Git Restore",
      "description": "Restore files to the last commit.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "files": {
          "type": "array",
          "optional": true,
          "items": {
            "type": "string"
          }
        }
      },
      "env": {
        "TOOL_NAME": "git_restore"
      }
    },
    {
      "name": "git_conflict_versions",
      "title": "Git Conflict Versions",
      "description": "Return base/ours/theirs versions for a conflicted file.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "file": {
          "type": "string",
          "optional": false
        }
      },
      "env": {
        "TOOL_NAME": "git_conflict_versions"
      }
    },
    {
      "name": "git_checkout_conflict",
      "title": "Git Checkout Conflict",
      "description": "Checkout ours/theirs version for a conflicted file.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "file": {
          "type": "string",
          "optional": false
        },
        "source": {
          "type": "string",
          "optional": false
        }
      },
      "env": {
        "TOOL_NAME": "git_checkout_conflict"
      }
    },
    {
      "name": "git_stash",
      "title": "Git Stash",
      "description": "Stash local changes.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "includeUntracked": {
          "type": "boolean",
          "optional": true
        },
        "message": {
          "type": "string",
          "optional": true
        }
      },
      "env": {
        "TOOL_NAME": "git_stash"
      }
    },
    {
      "name": "git_stash_pop",
      "title": "Git Stash Pop",
      "description": "Apply and drop the latest stash.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "ref": {
          "type": "string",
          "optional": true
        },
        "reinstateIndex": {
          "type": "boolean",
          "optional": true
        }
      },
      "env": {
        "TOOL_NAME": "git_stash_pop"
      }
    },
    {
      "name": "git_commit",
      "title": "Git Commit",
      "description": "Create a commit from staged changes.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "message": {
          "type": "string",
          "optional": true
        },
        "amend": {
          "type": "boolean",
          "optional": true
        },
        "signoff": {
          "type": "boolean",
          "optional": true
        },
        "userName": {
          "type": "string",
          "optional": true
        },
        "userEmail": {
          "type": "string",
          "optional": true
        }
      },
      "env": {
        "TOOL_NAME": "git_commit"
      }
    },
    {
      "name": "git_push",
      "title": "Git Push",
      "description": "Push the current branch to a remote.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "remote": {
          "type": "string",
          "optional": true
        },
        "branch": {
          "type": "string",
          "optional": true
        },
        "setUpstream": {
          "type": "boolean",
          "optional": true
        },
        "token": {
          "type": "string",
          "optional": true
        }
      },
      "env": {
        "TOOL_NAME": "git_push"
      }
    },
    {
      "name": "git_pull",
      "title": "Git Pull",
      "description": "Pull from remote.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "remote": {
          "type": "string",
          "optional": true
        },
        "branch": {
          "type": "string",
          "optional": true
        },
        "rebase": {
          "type": "boolean",
          "optional": true
        },
        "ffOnly": {
          "type": "boolean",
          "optional": true
        },
        "token": {
          "type": "string",
          "optional": true
        }
      },
      "env": {
        "TOOL_NAME": "git_pull"
      }
    },
    {
      "name": "git_diagnose",
      "title": "Git Diagnose",
      "description": "Run git diagnostic checks.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        }
      },
      "env": {
        "TOOL_NAME": "git_diagnose"
      }
    },
    {
      "name": "git_repos_overview",
      "title": "Git Repos Overview",
      "description": "Scan a root for git repositories.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "maxRepos": {
          "type": "number",
          "optional": true
        }
      },
      "env": {
        "TOOL_NAME": "git_repos_overview"
      }
    },
    {
      "name": "git_identity",
      "title": "Git Identity",
      "description": "Read git identity for a repository.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        }
      },
      "env": {
        "TOOL_NAME": "git_identity"
      }
    },
    {
      "name": "git_set_identity",
      "title": "Git Set Identity",
      "description": "Set git identity for a repository.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "path": {
          "type": "string",
          "optional": false
        },
        "scope": {
          "type": "string",
          "optional": true
        },
        "name": {
          "type": "string",
          "optional": false
        },
        "email": {
          "type": "string",
          "optional": false
        }
      },
      "env": {
        "TOOL_NAME": "git_set_identity"
      }
    },
    {
      "name": "git_commit_message",
      "title": "Generate Git Commit Message",
      "description": "Generate a Git commit message using an LLM from provided diffs.",
      "command": "tools/git_tool.sh",
      "cwd": "workspace",
      "inputSchema": {
        "diffs": {
          "type": "array",
          "optional": false,
          "items": {
            "type": "object",
            "properties": {
              "repoPath": {
                "type": "string"
              },
              "filePath": {
                "type": "string"
              },
              "diff": {
                "type": "string"
              }
            },
            "required": [
              "repoPath",
              "filePath",
              "diff"
            ]
          }
        }
      },
      "env": {
        "TOOL_NAME": "git_commit_message"
      }
    }
  ]
}